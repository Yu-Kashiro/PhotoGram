.login-header-image
.login-container
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .field
      = f.label :email, t('activerecord.attributes.user.email')
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'text'
    .field
      = f.label :password, t('activerecord.attributes.user.password')
      %br/
      = f.password_field :password, autocomplete: "current-password", class: 'text'
    .actions
      = f.submit t('helpers.submit.login'), class: 'btn-primary'
    .option
      = render "devise/shared/links"

